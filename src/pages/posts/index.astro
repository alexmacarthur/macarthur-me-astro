---
import PaginatedPosts from "../../layouts/PaginatedPosts.astro";
import contentService from "../../lib/ContentService";
import type { PaginatedList } from "../../types/types";

const posts = await contentService.getPosts(1, { excludeTags: ["scrap"] });

const pageData: PaginatedList = {
  data: posts,
  currentPage: 1,
  lastPage: posts.meta.pagination.pages,
  url: {
    prev: undefined,
    next: "/posts/page/2",
  }
};
---

<PaginatedPosts page={pageData} />
