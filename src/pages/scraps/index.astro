---
import type { Page } from "astro";
import type { PaginatedList } from "../../types/types";
import contentService from "../../lib/ContentService";
import PaginatedScraps from "../../layouts/PaginatedScraps.astro";

const posts = await contentService.getPosts(1, { tags: ["scrap"]});

const pageData: PaginatedList = {
  data: posts,
  currentPage: 1,
  lastPage: posts.meta.pagination.pages,
  url: {
    prev: undefined,
    next: "/scraps/page/2",
  } as Page["url"],
};
---

<PaginatedScraps page={pageData} />
