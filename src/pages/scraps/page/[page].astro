---
import PaginatedScraps from "../../../layouts/PaginatedScraps.astro";
import { POSTS_PER_PAGE } from "../../../lib/constants";
import contentService from "../../../lib/ContentService";

export async function getStaticPaths({ paginate }) {
  const posts = await contentService.getAllPosts({ tags: ["scrap"] });

  return paginate(posts, { pageSize: POSTS_PER_PAGE });
}

const { page: pageData } = Astro.props;
---

<PaginatedScraps page={pageData} />
