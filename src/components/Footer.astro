---
const socialLinks = [
  {
    name: "Twitter",
    href: "https://twitter.com/amacarthur",
  },
  {
    name: "GitHub",
    href: "https://github.com/alexmacarthur",
  },
  {
    name: "LinkedIn",
    href: "https://www.linkedin.com/in/alexmacarthur/",
  },
];

const otherLinks = [
  {
    name: "Site Stack",
    href: "/stack",
  },
  {
    name: "Newsletter",
    href: "/newsletter",
  },
  {
    name: "RSS Feed",
    href: "https://www.macarthur.me/rss/feed.xml",
  },
];

const projectLinks = [
  {
    name: "PicPerf",
    href: "https://www.picperf.dev",
  },
  {
    name: "JamComments",
    href: "https://jamcomments.com",
  },
  {
    name: "TypeIt",
    href: "https://typeitjs.com",
  },
];
---

<footer
  class="px-4 md:px-6 py-8 pb-6 mt-12 flex flex-col justify-center items-center"
>
  <hr class="bg-gray-200 h-px w-full max-w-5xl mb-8" />

  <div
    class="flex flex-col-reverse md:flex-row justify-between w-full max-w-5xl mx-auto"
  >
    <span
      class="flex-none text-base text-gray-500 text-center md:text-left mt-6 md:mt-0"
      >&copy; {new Date().getFullYear()} Alex MacArthur</span
    >

    <div
      class="mb-4 flex justify-between sm:justify-center md:justify-end gap-8 sm:gap-14 w-full"
    >
      <div>
        <span
          class="block mb-3 text-gray-500 font-light text-base slanted-text"
        >
          Social
        </span>
        <ul class="flex flex-col gap-3">
          {
            socialLinks.map((link) => {
              return (
                <li class="social-link">
                  <a
                    href={link.href}
                    target="_blank"
                    class="fancy-link-on-hover"
                  >
                    {link.name}
                  </a>
                </li>
              );
            })
          }
        </ul>
      </div>

      <div>
        <span
          class="block mb-3 text-gray-500 font-light text-base slanted-text"
        >
          Projects
        </span>

        <ul class="flex flex-col gap-3">
          {
            projectLinks.map((link) => {
              return (
                <li class="social-link">
                  <a
                    href={link.href}
                    target="_blank"
                    class="fancy-link-on-hover"
                  >
                    {link.name}
                  </a>
                </li>
              );
            })
          }
        </ul>
      </div>

      <div>
        <span
          class="block mb-3 text-gray-500 font-light text-base slanted-text"
        >
          Other
        </span>

        <ul class="flex flex-col gap-3">
          {
            otherLinks.map((link) => {
              return (
                <li class="social-link">
                  <a
                    href={link.href}
                    class="fancy-link-on-hover"
                    target="_blank"
                  >
                    {link.name}
                  </a>
                </li>
              );
            })
          }
        </ul>
      </div>
    </div>
  </div>
</footer>

<style>
  ul li,
  ul li a {
    @apply text-sm text-gray-500;
  }
</style>
