---
import PicPerfImage from "@picperf/astro";
---

<a href="/about" aria-label="about me" class="flex flex-row items-center gap-4">
  <div class="flex-none w-10 shadow-box no-padding">
    <PicPerfImage
      src="https://picperf.io/https://macarthur.me/me.jpg"
      alt="my face"
      includeInSitemap={true}
      class="filter grayscale"
      width={25}
      height={25}
