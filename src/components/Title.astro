---
import GradientText from "./GradientText.astro";

export interface Props {
  headingClasses?: string;
  subtitle?: string | null;
}

const { headingClasses = "text-4xl md:text-6xl", subtitle = "" } = Astro.props;
---

<div class="">
  <h1
    class={`${headingClasses} font-extrabold pb-2 gradient-text inline-block leading-tight`}
  >
    <GradientText>
      <slot />
    </GradientText>
  </h1>

  {
    subtitle && (
      <h2 class="font-light text-base md:text-lg italic text-gray-500 mb-4 -mt-5">
        {subtitle}
      </h2>
    )
  }
</div>
