---
import GradientText from "./GradientText.astro";

export interface Props {

  headingClasses?: string;
  subtitle?: string | null;
  bottomSpacingClasses?: string;
}

const {
  headingClasses = "text-4xl md:text-6xl",
  subtitle = "",
  bottomSpacingClasses = "pb-2 mb-2 md:mb-6"
} = Astro.props;
---

<div class="">
  <h1
    class={`${headingClasses} font-extrabold block md:leading-[1.10 ${bottomSpacingClasses}`}
    >
    <GradientText>
      <slot />
    </GradientText>
  </h1>

  {
    subtitle && (
      <span class="font-light text-base md:text-lg italic text-gray-500 mb-4 -mt-5 block">
        {subtitle}
      </span>
    )
  }
</div>
