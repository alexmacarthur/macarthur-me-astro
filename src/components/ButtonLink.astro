---
import ArrowSmallRight from 'astro-heroicons/outline/ArrowSmallRight.astro';

export interface Props {
  href: string;
  withArrow: boolean;
}

const { href, withArrow } = Astro.props;
---

<a
  class="text-purple-500 hover:text-purple-400 inline-flex items-center gap-1 p-2 -m-2"
  href={href}
  >
  <slot />

  <ArrowSmallRight class="h-4" />
</a>

<style>
  svg {
    stroke: theme('colors.purple.500');
  }

  a:hover svg {
    stroke: theme('colors.purple.400');
  }
</style>
